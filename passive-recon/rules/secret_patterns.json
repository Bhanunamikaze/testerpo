{
  "version": "1.0.0",
  "description": "Secret and credential detection patterns with entropy thresholds",
  "patterns": {
    "aws_access_key": {
      "regex": "(?:A3T[A-Z0-9]|AKIA|AGPA|AIDA|AROA|AIPA|ANPA|ANVA|ASIA)[A-Z0-9]{16}",
      "description": "AWS Access Key ID",
      "severity": "critical",
      "entropy_threshold": 3.5,
      "context_keywords": ["aws", "amazon", "s3", "ec2"],
      "verification": {
        "method": "format_check",
        "prefix_mandatory": true
      }
    },
    "aws_secret_key": {
      "regex": "(?i)aws(.{0,20})?(?:secret)(.{0,20})?['\\\"][0-9a-zA-Z\\/+]{40}['\\\"]",
      "description": "AWS Secret Access Key",
      "severity": "critical",
      "entropy_threshold": 4.5,
      "context_keywords": ["aws", "secret", "access"]
    },
    "aws_account_id": {
      "regex": "(?i)aws(.{0,20})?account(.{0,20})?['\\\"]?[0-9]{12}['\\\"]?",
      "description": "AWS Account ID",
      "severity": "medium",
      "context_keywords": ["aws", "account"]
    },
    "github_token": {
      "regex": "ghp_[0-9a-zA-Z]{36}",
      "description": "GitHub Personal Access Token",
      "severity": "critical",
      "entropy_threshold": 4.0
    },
    "github_oauth": {
      "regex": "gho_[0-9a-zA-Z]{36}",
      "description": "GitHub OAuth Access Token",
      "severity": "critical",
      "entropy_threshold": 4.0
    },
    "github_app_token": {
      "regex": "(?:ghu|ghs)_[0-9a-zA-Z]{36}",
      "description": "GitHub App or Refresh Token",
      "severity": "critical",
      "entropy_threshold": 4.0
    },
    "gitlab_token": {
      "regex": "glpat-[0-9a-zA-Z\\-_]{20}",
      "description": "GitLab Personal Access Token",
      "severity": "critical",
      "entropy_threshold": 4.0
    },
    "google_api_key": {
      "regex": "AIza[0-9A-Za-z\\-_]{35}",
      "description": "Google API Key",
      "severity": "high",
      "entropy_threshold": 4.0,
      "context_keywords": ["google", "firebase", "gcp"]
    },
    "google_oauth": {
      "regex": "(?i)[0-9]+-[0-9A-Za-z_]{32}\\.apps\\.googleusercontent\\.com",
      "description": "Google OAuth Client ID",
      "severity": "medium",
      "context_keywords": ["oauth", "google"]
    },
    "google_service_account": {
      "regex": "\"type\":\\s*\"service_account\"",
      "description": "Google Service Account JSON",
      "severity": "critical",
      "context_keywords": ["private_key_id", "client_email"],
      "multiline": true
    },
    "azure_storage_key": {
      "regex": "(?i)DefaultEndpointsProtocol=https;AccountName=[^;]+;AccountKey=[A-Za-z0-9+/=]{88};",
      "description": "Azure Storage Connection String",
      "severity": "critical",
      "context_keywords": ["azure", "storage", "accountkey"]
    },
    "azure_client_secret": {
      "regex": "(?i)azure(.{0,20})?client(.{0,20})?secret(.{0,20})?['\\\"][0-9a-zA-Z\\-_~.]{34,40}['\\\"]",
      "description": "Azure Client Secret",
      "severity": "critical",
      "context_keywords": ["azure", "client", "secret"]
    },
    "slack_token": {
      "regex": "xox[baprs]-[0-9]{10,13}-[0-9]{10,13}-[0-9a-zA-Z]{24,32}",
      "description": "Slack Token",
      "severity": "high",
      "entropy_threshold": 4.0,
      "context_keywords": ["slack"]
    },
    "slack_webhook": {
      "regex": "https://hooks\\.slack\\.com/services/T[a-zA-Z0-9_]{8,10}/B[a-zA-Z0-9_]{8,10}/[a-zA-Z0-9_]{24}",
      "description": "Slack Webhook URL",
      "severity": "high",
      "context_keywords": ["slack", "webhook"]
    },
    "stripe_key": {
      "regex": "(?:sk|pk)_(test|live)_[0-9a-zA-Z]{24,99}",
      "description": "Stripe API Key",
      "severity": "critical",
      "entropy_threshold": 4.0,
      "context_keywords": ["stripe", "payment"]
    },
    "twilio_api_key": {
      "regex": "SK[0-9a-fA-F]{32}",
      "description": "Twilio API Key",
      "severity": "high",
      "context_keywords": ["twilio"]
    },
    "sendgrid_api_key": {
      "regex": "SG\\.[0-9A-Za-z\\-_]{22}\\.[0-9A-Za-z\\-_]{43}",
      "description": "SendGrid API Key",
      "severity": "high",
      "context_keywords": ["sendgrid", "email"]
    },
    "mailgun_api_key": {
      "regex": "key-[0-9a-zA-Z]{32}",
      "description": "Mailgun API Key",
      "severity": "high",
      "context_keywords": ["mailgun"]
    },
    "jwt_token": {
      "regex": "eyJ[A-Za-z0-9_-]{10,}\\.eyJ[A-Za-z0-9_-]{10,}\\.[A-Za-z0-9_.-]{10,}",
      "description": "JWT Token",
      "severity": "medium",
      "entropy_threshold": 4.0,
      "context_keywords": ["jwt", "bearer", "authorization"]
    },
    "rsa_private_key": {
      "regex": "-----BEGIN (?:RSA |OPENSSH )?PRIVATE KEY-----",
      "description": "RSA Private Key",
      "severity": "critical",
      "multiline": true,
      "context_keywords": ["private", "key"]
    },
    "ssh_dsa_private_key": {
      "regex": "-----BEGIN DSA PRIVATE KEY-----",
      "description": "DSA Private Key",
      "severity": "critical",
      "multiline": true
    },
    "ec_private_key": {
      "regex": "-----BEGIN EC PRIVATE KEY-----",
      "description": "EC Private Key",
      "severity": "critical",
      "multiline": true
    },
    "pgp_private_key": {
      "regex": "-----BEGIN PGP PRIVATE KEY BLOCK-----",
      "description": "PGP Private Key",
      "severity": "critical",
      "multiline": true
    },
    "docker_auth": {
      "regex": "(?i)docker(.{0,20})?auth(.{0,20})?['\\\"][^'\\\"]{20,}['\\\"]",
      "description": "Docker Authentication",
      "severity": "high",
      "context_keywords": ["docker", "registry"]
    },
    "npm_token": {
      "regex": "npm_[A-Za-z0-9]{36}",
      "description": "NPM Access Token",
      "severity": "high",
      "context_keywords": ["npm"]
    },
    "pypi_token": {
      "regex": "pypi-AgEIcHlwaS5vcmc[A-Za-z0-9\\-_]{50,1000}",
      "description": "PyPI Upload Token",
      "severity": "high",
      "context_keywords": ["pypi"]
    },
    "heroku_api_key": {
      "regex": "[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}",
      "description": "Heroku API Key (UUID format)",
      "severity": "high",
      "context_keywords": ["heroku"],
      "entropy_threshold": 3.5
    },
    "discord_webhook": {
      "regex": "https://discord(?:app)?\\.com/api/webhooks/[0-9]{18,19}/[A-Za-z0-9_-]{68}",
      "description": "Discord Webhook",
      "severity": "medium",
      "context_keywords": ["discord"]
    },
    "discord_bot_token": {
      "regex": "[A-Za-z0-9_-]{24}\\.[A-Za-z0-9_-]{6}\\.[A-Za-z0-9_-]{27}",
      "description": "Discord Bot Token",
      "severity": "high",
      "context_keywords": ["discord", "bot"]
    },
    "firebase_api_key": {
      "regex": "(?i)firebase(.{0,20})?api(.{0,20})?key(.{0,20})?['\\\"]AIza[0-9A-Za-z\\-_]{35}['\\\"]",
      "description": "Firebase API Key",
      "severity": "high",
      "context_keywords": ["firebase"]
    },
    "firebase_database_url": {
      "regex": "https://[a-z0-9-]+\\.firebaseio\\.com",
      "description": "Firebase Database URL",
      "severity": "medium",
      "context_keywords": ["firebase"]
    },
    "square_access_token": {
      "regex": "sq0atp-[0-9A-Za-z\\-_]{22}",
      "description": "Square Access Token",
      "severity": "high",
      "context_keywords": ["square"]
    },
    "square_oauth_secret": {
      "regex": "sq0csp-[0-9A-Za-z\\-_]{43}",
      "description": "Square OAuth Secret",
      "severity": "critical",
      "context_keywords": ["square"]
    },
    "paypal_braintree_token": {
      "regex": "access_token\\$production\\$[0-9a-z]{16}\\$[0-9a-f]{32}",
      "description": "PayPal/Braintree Access Token",
      "severity": "high",
      "context_keywords": ["paypal", "braintree"]
    },
    "database_connection_string": {
      "regex": "(?i)(mysql|postgres|mongodb|redis|mssql)://[^\\s\"']+:[^\\s\"']+@[^\\s\"']+",
      "description": "Database Connection String",
      "severity": "critical",
      "context_keywords": ["database", "connection"]
    },
    "jdbc_connection": {
      "regex": "jdbc:[a-z]+://[^\\s\"']+",
      "description": "JDBC Connection String",
      "severity": "high",
      "context_keywords": ["jdbc", "database"]
    },
    "generic_api_key": {
      "regex": "(?i)(?:api|access)[_-]?key[_-]?[:=]\\s*['\\\"][0-9a-zA-Z\\-_]{20,}['\\\"]",
      "description": "Generic API Key",
      "severity": "medium",
      "entropy_threshold": 3.5,
      "context_keywords": ["api", "key"]
    },
    "generic_secret": {
      "regex": "(?i)secret[_-]?[:=]\\s*['\\\"][0-9a-zA-Z\\-_]{20,}['\\\"]",
      "description": "Generic Secret",
      "severity": "medium",
      "entropy_threshold": 4.0,
      "context_keywords": ["secret"]
    },
    "generic_password": {
      "regex": "(?i)password[_-]?[:=]\\s*['\\\"][^'\\\"]{8,}['\\\"]",
      "description": "Generic Password",
      "severity": "medium",
      "context_keywords": ["password", "passwd", "pwd"]
    },
    "basic_auth": {
      "regex": "(?i)authorization:\\s*basic\\s+[A-Za-z0-9+/=]{20,}",
      "description": "Basic Authentication Header",
      "severity": "high",
      "context_keywords": ["authorization", "basic"]
    },
    "bearer_token": {
      "regex": "(?i)authorization:\\s*bearer\\s+[A-Za-z0-9\\-._~+/]+=*",
      "description": "Bearer Token in Authorization Header",
      "severity": "high",
      "context_keywords": ["bearer", "authorization"]
    },
    "private_key_generic": {
      "regex": "(?i)private[_-]?key[_-]?[:=]\\s*['\\\"][^'\\\"]{32,}['\\\"]",
      "description": "Generic Private Key Reference",
      "severity": "high",
      "entropy_threshold": 4.0,
      "context_keywords": ["private", "key"]
    },
    "terraform_aws": {
      "regex": "(?i)provider\\s+\"aws\"\\s*\\{[^}]*secret",
      "description": "Terraform AWS Provider with Secrets",
      "severity": "high",
      "multiline": true,
      "context_keywords": ["terraform", "aws"]
    },
    "ansible_vault": {
      "regex": "\\$ANSIBLE_VAULT;",
      "description": "Ansible Vault Encrypted Content",
      "severity": "low",
      "context_keywords": ["ansible"]
    },
    "kubernetes_secret": {
      "regex": "(?i)kind:\\s*Secret",
      "description": "Kubernetes Secret Definition",
      "severity": "medium",
      "multiline": true,
      "context_keywords": ["kubernetes", "k8s"]
    },
    "circleci_token": {
      "regex": "(?i)circle[_-]?token[_-]?[:=]\\s*['\\\"][0-9a-f]{40}['\\\"]",
      "description": "CircleCI Token",
      "severity": "high",
      "context_keywords": ["circleci", "circle"]
    },
    "travis_token": {
      "regex": "(?i)travis[_-]?token[_-]?[:=]\\s*['\\\"][0-9a-zA-Z]{22}['\\\"]",
      "description": "Travis CI Token",
      "severity": "high",
      "context_keywords": ["travis"]
    },
    "codecov_token": {
      "regex": "(?i)codecov[_-]?token[_-]?[:=]\\s*['\\\"][0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}['\\\"]",
      "description": "Codecov Token",
      "severity": "medium",
      "context_keywords": ["codecov"]
    },
    "sonarqube_token": {
      "regex": "(?i)sonar[_-]?token[_-]?[:=]\\s*['\\\"][0-9a-f]{40}['\\\"]",
      "description": "SonarQube Token",
      "severity": "medium",
      "context_keywords": ["sonar"]
    },
    "artifactory_token": {
      "regex": "(?i)artifactory[_-]?(?:token|password)[_-]?[:=]\\s*['\\\"][^'\\\"]{20,}['\\\"]",
      "description": "Artifactory Token/Password",
      "severity": "high",
      "context_keywords": ["artifactory"]
    },
    "nuget_api_key": {
      "regex": "oy2[a-z0-9]{43}",
      "description": "NuGet API Key",
      "severity": "high",
      "context_keywords": ["nuget"]
    },
    "rubygems_api_key": {
      "regex": "rubygems_[a-f0-9]{48}",
      "description": "RubyGems API Key",
      "severity": "high",
      "context_keywords": ["rubygems", "gem"]
    },
    "telegram_bot_token": {
      "regex": "[0-9]{8,10}:[A-Za-z0-9_-]{35}",
      "description": "Telegram Bot Token",
      "severity": "medium",
      "context_keywords": ["telegram", "bot"]
    },
    "adobe_oauth": {
      "regex": "(?i)adobe(.{0,20})?client(.{0,20})?secret(.{0,20})?['\\\"][0-9a-f]{32}['\\\"]",
      "description": "Adobe OAuth Client Secret",
      "severity": "high",
      "context_keywords": ["adobe"]
    },
    "alibaba_access_key": {
      "regex": "(?i)alibaba(.{0,20})?access(.{0,20})?key(.{0,20})?['\\\"][0-9a-zA-Z]{30}['\\\"]",
      "description": "Alibaba Cloud Access Key",
      "severity": "critical",
      "context_keywords": ["alibaba", "aliyun"]
    },
    "notion_token": {
      "regex": "secret_[a-zA-Z0-9]{43}",
      "description": "Notion Integration Token",
      "severity": "high",
      "context_keywords": ["notion"]
    },
    "linear_api_key": {
      "regex": "lin_api_[a-zA-Z0-9]{40}",
      "description": "Linear API Key",
      "severity": "high",
      "context_keywords": ["linear"]
    },
    "doppler_token": {
      "regex": "dp\\.pt\\.[a-zA-Z0-9]{43}",
      "description": "Doppler Service Token",
      "severity": "critical",
      "context_keywords": ["doppler"]
    },
    "pulumi_token": {
      "regex": "pul-[a-f0-9]{40}",
      "description": "Pulumi Access Token",
      "severity": "high",
      "context_keywords": ["pulumi"]
    },
    "planetscale_token": {
      "regex": "pscale_tkn_[a-zA-Z0-9_\\.\\-]{43}",
      "description": "PlanetScale Token",
      "severity": "high",
      "context_keywords": ["planetscale"]
    },
    "clojars_token": {
      "regex": "CLOJARS_[a-zA-Z0-9]{60}",
      "description": "Clojars Deploy Token",
      "severity": "high",
      "context_keywords": ["clojars"]
    },
    "cloudflare_api_key": {
      "regex": "(?i)cloudflare(.{0,20})?api(.{0,20})?key(.{0,20})?['\\\"][a-z0-9]{37}['\\\"]",
      "description": "Cloudflare API Key",
      "severity": "high",
      "context_keywords": ["cloudflare"]
    },
    "digitalocean_token": {
      "regex": "(?i)digitalocean(.{0,20})?token(.{0,20})?['\\\"][a-f0-9]{64}['\\\"]",
      "description": "DigitalOcean Personal Access Token",
      "severity": "high",
      "context_keywords": ["digitalocean"]
    },
    "age_private_key": {
      "regex": "AGE-SECRET-KEY-1[QPZRY9X8GF2TVDW0S3JN54KHCE6MUA7L]{58}",
      "description": "Age Encryption Private Key",
      "severity": "critical",
      "context_keywords": ["age", "encryption"]
    }
  },
  "entropy_calculation": {
    "enabled": true,
    "min_length": 16,
    "charset_bonus": {
      "has_lowercase": 0.5,
      "has_uppercase": 0.5,
      "has_digits": 0.5,
      "has_special": 1.0
    }
  },
  "false_positive_filters": {
    "max_repeated_chars": 4,
    "exclude_patterns": [
      "example\\.com",
      "test\\.com",
      "localhost",
      "127\\.0\\.0\\.1",
      "placeholder",
      "your-.*-here",
      "xxxxx",
      "aaaaa",
      "11111"
    ],
    "common_test_values": [
      "test",
      "demo",
      "example",
      "sample",
      "fake",
      "dummy"
    ]
  }
}
